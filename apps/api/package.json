    "db:studio": "prisma studio",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@fastify/cookie": "^9.2.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.3",
    "@fastify/rate-limit": "^9.0.1",
    "@prisma/client": "^5.7.1",
    "@shoe-paradise/shared": "workspace:*",
    "bcrypt": "^5.1.1",
    "fastify": "^4.25.2",
    "fastify-plugin": "^4.5.1",
    "stripe": "^14.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.10.5",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
